/* pages/janhuo/index.wxss *//* pages/shouhuo/index.wxss */

.title_Info {
  padding: 24rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 48rpx;
  background: #009688;
  color: #ffffff;
  border: 1rpx solid rgba(187,187,187,1);
}
/* 货架号 */
.saoma_wrap {
  display: flex;
  flex-direction: row;
  margin: 20rpx 10rpx;
  padding: 40rpx 20rpx;
  border: 1rpx solid rgba(187,187,187,1);
  position: relative;
}
.saoma_wrap image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 30rpx;
  top:40rpx;
}
.saoma_wrap input {
  margin-left: 20rpx;
}
/* 扫码详情 */
.detail_wrap {
  margin: 0 10rpx;
  padding: 40rpx 0rpx;
  padding-right: 6rpx;
  border: 1rpx solid rgba(187,187,187,1);
}

.top_title, .order_info {
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 30rpx;
}
 .top_title text, .order_info text {
   text-align: center;
   font-size: 28rpx;
   width: 19%;
 }
 .top_title .order_num, .order_info .order_num {
   flex: 1;
 }
 .top_title .order_name, .order_info .order_name {
   width: 26%;
 }

 .order_info {
   margin: 14rpx;
 }

.detail_wrap .detail_item text:first-child {
  margin-right: 20rpx;
}


  /* 操作按钮 */

   .opt_wrap {
     width: 100%;
     margin-top: 80rpx;
     direction: flex;
     flex-direction: row;
     text-align: center;
   }

   .opt_wrap text {
     padding: 16rpx 50rpx;
     border-radius: 8rpx;
     font-size: 36rpx;
    border: 1rpx solid rgba(187,187,187,1);
   }
   .opt_wrap text:first-child {
     margin-right: 60rpx;
   }